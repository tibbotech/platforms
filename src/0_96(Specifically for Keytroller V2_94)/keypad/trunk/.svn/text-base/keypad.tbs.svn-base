include "global.tbh"  

public dim keycodeF1 as byte
public dim keycodeF2 as byte
public dim keycodeF3 as byte
public dim keycodeF4 as byte

dim io_1 as byte
dim io_2 as byte
dim io_3 as byte
dim io_4 as byte
'=============================================================
public sub key_led_reset
'Turn off the all leds
	io.num = io_1
	io.state = HIGH    
	io.num = io_2
	io.state = HIGH
	io.num = io_3
	io.state = HIGH
	io.num = io_4
	io.state = HIGH	
end sub

'=============================================================
public sub key_led_pressed(key_code as byte)
'Turn on the led specify by key_code
	key_led_reset
	select case key_code
		case keycodeF1:
			io.num = io_1
			io.state = LOW
		case keycodeF2:
			io.num = io_2
			io.state = LOW
		case keycodeF3:
			io.num = io_3
			io.state = LOW
		case keycodeF4:
			io.num = io_4
			io.state = LOW
	end select	
end sub
'=============================================================
public sub key_led_released(key_code as byte)
'Turn off the led specify by the key_code
	select case key_code
		case keycodeF1:
			io.num = io_1
			io.state = HIGH
		case keycodeF2:
			io.num = io_2
			io.state = HIGH
		case keycodeF3:
			io.num = io_3
			io.state = HIGH
		case keycodeF4:
			io.num = io_4
			io.state = HIGH
	end select
end sub

'=============================================================
public sub key_rotate(dir as byte)
	select case dir
		case 0:
			keycodeF1 = key_code1
			keycodeF2 = key_code2
			keycodeF3 = key_code3
			keycodeF4 = key_code4
			io_1 = key_io1
			io_2 = key_io2
			io_3 = key_io3
			io_4 = key_io4
				
		case 1:
			keycodeF1 = key_code4
			keycodeF2 = key_code3
			keycodeF3 = key_code2
			keycodeF4 = key_code1
			io_1 = key_io4
			io_2 = key_io3
			io_3 = key_io2
			io_4 = key_io1		
	end select
end sub

'=============================================================
public sub key_init
	dim s as string
	setting_sg("MM",0,s,EN_STG_GET)
	key_rotate(val(s))
	
	io.num=key_io1
	io.enabled=YES

	io.num=key_io2
	io.enabled=YES

	io.num=key_io3
	io.enabled=YES

	io.num=key_io4
	io.enabled=YES
	kp.enabled = NO
	s = str(key_io1)+","+str(key_io2)+","+str(key_io3)+","+str(key_io4)
	kp.scanlinesmapping=s

	kp.returnlinesmapping= key_return
	kp.longpressdelay = 80
	kp.enabled=YES
 
end sub


