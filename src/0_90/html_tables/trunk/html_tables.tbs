function html_find_table(html_tbl_name as string(MAX_TBL_NAME_LEN)) as no_yes
	dim i as byte
	for i = 0 to HTML_MAX_TBL_NUM - 1
		if html_tbl_info(i).TableName = html_tbl_name then
			html_tbl_num = i
			html_find_table = YES
			exit function
		end if
	next i
	html_tbl_status = HTBL_STATUS_NOT_FOUND
	html_find_table = NO
end function

