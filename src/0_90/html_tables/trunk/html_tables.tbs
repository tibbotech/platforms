public function html_tbl_upload as string
	dim s as string
	dim pos1,pos2, i as byte
	dim tbl as tbl_type
	dim boundary_string, stemp as string(50)
	dim current_tbl_name as string(HTML_TBL_FILENAME_LEN)
	'The following assumes that the file will start within first 255 bytes
	'there is some service information at the end of the file, we need to cut it off --
	'the project is incomplete
	tbl_select("TBL_TEMP")
	while true
		if getting_postdata = NO then
			pos1=instr(1,sock.httprqstring,chr(&h0D)+chr(&h0A),1)
			boundary_string=sock.gethttprqstring(pos1-1)
			pos1 = 1
			i = 1
			while pos1 > 0
				pos1 = instr(i,boundary_string,"-",1)
				i=i+1
			wend
			i = i-2
			boundary_string = right(boundary_string, len(boundary_string)-i)
			pos1 = instr(1,sock.httprqstring,boundary_string,1)+len(boundary_string)
			s=sock.gethttprqstring(pos1-1)
			if instr(1,s,"session",1) > 0 then
				pos1 = instr(1,s,chr(&h0D)+chr(&h0A)+chr(&h0D)+chr(&h0A),1)+4
				pos2 = instr(pos1,s,chr(&h0D)+chr(&h0A),1)
				stemp = mid(s,pos1,pos2-pos1)
				if stemp <> login_data then
					exit function
				else
					getting_postdata = YES
				end if
			end if
			pos1 = instr(1,sock.httprqstring,boundary_string,1)+len(boundary_string)
			s=sock.gethttprqstring(pos1-1)
			if instr(1,s,"upload_mode",1) > 0 then
				pos1 = instr(1,s,chr(&h0D)+chr(&h0A)+chr(&h0D)+chr(&h0A),1)+4
				pos2 = instr(pos1,s,chr(&h0D)+chr(&h0A),1)
				stemp = mid(s,pos1,pos2-pos1)
			end if

			pos1 = instr(1,sock.httprqstring,chr(&h0D)+chr(&h0A)+chr(&h0D)+chr(&h0A),1)+3
			s=sock.gethttprqstring(pos1)
			current_tbl_name = get_http_argument(s,"name=")
			current_tbl_name = mid(current_tbl_name,2,len(current_tbl_name)-3)
			tbl_copy_info(current_tbl_name,"TBL_TEMP")
			tbl_get_tbl_info(tbl)
		else
			pos1 = instr(1,sock.httprqstring,boundary_string,1)+len(boundary_string)
			pos2 = instr(1,sock.httprqstring,chr(CR)+chr(LF),1)
			if pos1 > len(boundary_string) and pos2 = 1 then
				s = sock.gethttprqstring(255)
				getting_postdata= NO
			else 
				if pos2 > 0 then
					s = sock.gethttprqstring(pos2+1)
					for i = 0 to MAX_NUM_FIELD
						pos1 = instr(1,s,",",1)
						if pos1> 0 then
							stemp = left(s,pos1-1)
							s = right(s,len(s)-pos1)
						else
							stemp = left(s,len(s)-2)
							s= ""
						end if
						if tbl.hash = YES then
							select case i
								case 0: tbl_field_sg("MD5",stemp,EN_TBL_SET)
								case 1: tbl_field_sg("UID",stemp,EN_TBL_SET)
								case else tbl_field_sg(tbl.Fields(i-2).FieldName,stemp,EN_TBL_SET)
							end select
						else
							tbl_field_sg(tbl.Fields(i).FieldName,stemp,EN_TBL_SET)
						end if
						if s = "" then exit for
					next i
					tbl_record_add()
					tbl_set_md5()
				end if 
			end if
			if len(sock.httprqstring)=0 or pos1 > 0 then exit while
		end if
	wend
	tbl_replace(current_tbl_name,"TBL_TEMP")
end function